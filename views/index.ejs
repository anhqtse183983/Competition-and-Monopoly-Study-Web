<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= data.title %></title>
  <link rel="stylesheet" href="/public/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@600;700&family=Inter:wght@400;500&display=swap" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
</head>
<body>

  <nav class="navbar">
    <h1><%= data.title %></h1>

    <div class="navbar-buttons">
      <a href="/quiz" class="btn btn-secondary quiz-check-btn">Kiểm tra</a>
      <button class="theme-toggle-btn" id="themeToggle">🌞</button>
    </div>
  </nav>

  <main class="main-content">
    <% data.groups.forEach((group, idx) => { %>
      <section class="group-section section-<%= idx + 1 %>" data-aos="fade-up">
        <div class="container">
          <h2 class="group-title"><%= group.title %></h2>
          <p class="group-desc"><%= group.description %></p>
          <div class="lessons">
            <% group.lessons.forEach(lesson => { %>
              <div class="lesson-card">
                <h3><%= lesson.title %></h3>
                <p><%= lesson.text %></p>
              </div>
            <% }) %>
          </div>
        </div>
      </section>
    <% }) %>
  </main>

  <footer class="footer">
    <p>© Nhóm nghiên cứu - Cạnh tranh và Độc quyền</p>
  </footer>

  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>AOS.init({ duration: 1000, once: true });</script>
  
  <script>  
  const toggleBtn = document.getElementById("themeToggle");
  const body = document.body;

  if (localStorage.getItem("theme") === "dark") {
    body.classList.add("dark-mode");
    toggleBtn.textContent = "🌙";
  }

  toggleBtn.addEventListener("click", () => {
    body.classList.toggle("dark-mode");
    const isDark = body.classList.contains("dark-mode");
    toggleBtn.textContent = isDark ? "🌙" : "🌞";
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
  </script>
</body>
</html>
